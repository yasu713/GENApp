# Production Environment Configuration
# Copy this to .env.local for production deployment
# ⚠️ WARNING: Replace placeholder values with actual production values

# App Configuration
NEXT_PUBLIC_APP_ENV=production
# TODO: Replace with actual production API Gateway URL
NEXT_PUBLIC_API_URL=https://YOUR_ACTUAL_PROD_API_ID.execute-api.ap-northeast-1.amazonaws.com
# TODO: Replace with actual production WebSocket URL
NEXT_PUBLIC_WEBSOCKET_URL=wss://YOUR_ACTUAL_PROD_WEBSOCKET_ID.execute-api.ap-northeast-1.amazonaws.com/prod

# AWS Configuration  
NEXT_PUBLIC_AWS_REGION=ap-northeast-1
# TODO: Replace with actual production Cognito User Pool ID
NEXT_PUBLIC_AWS_USER_POOL_ID=ap-northeast-1_YOUR_ACTUAL_POOL_ID
# TODO: Replace with actual production Cognito Client ID  
NEXT_PUBLIC_AWS_USER_POOL_WEB_CLIENT_ID=YOUR_ACTUAL_CLIENT_ID
# TODO: Replace with actual production S3 bucket name
NEXT_PUBLIC_AWS_S3_BUCKET=genai-prod-user-files

# Feature Flags
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_IMAGE_UPLOAD=true
NEXT_PUBLIC_ENABLE_KNOWLEDGE_BASE=true
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=true

# Security
NEXT_PUBLIC_ENFORCE_HTTPS=true
NEXT_PUBLIC_CONTENT_SECURITY_POLICY=strict

# Performance
NEXT_PUBLIC_CACHE_STRATEGY=stale-while-revalidate
NEXT_PUBLIC_REQUEST_TIMEOUT=30000