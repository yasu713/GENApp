# Environment configuration example
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=ap-northeast-1
AWS_PROFILE=default

# Environment
ENVIRONMENT=dev
PROJECT_NAME=genai-management-assistant

# Cognito (will be output from Terraform)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# S3 (will be output from Terraform)
S3_BUCKET_NAME=

# Knowledge Base (will be output from Terraform)
KNOWLEDGE_BASE_ID=

# API Keys (set these in SSM Parameter Store)
WEB_SEARCH_API_KEY=your-web-search-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Development URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://*.amplifyapp.com

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds